{
  "description": "Monitoring complet du syst√®me et de StudiosDB",
  "steps": [
    {
      "type": "command",
      "command": "df",
      "args": ["-h"],
      "timeout": 5000,
      "name": "disk_usage"
    },
    {
      "type": "command",
      "command": "free",
      "args": ["-m"],
      "timeout": 5000,
      "name": "memory_usage"
    },
    {
      "type": "command",
      "command": "ps",
      "args": ["aux", "--sort=-pcpu"],
      "timeout": 5000,
      "name": "cpu_usage"
    },
    {
      "type": "command",
      "command": "systemctl",
      "args": ["status", "nginx"],
      "timeout": 5000,
      "name": "nginx_status"
    },
    {
      "type": "command",
      "command": "systemctl",
      "args": ["status", "mysql"],
      "timeout": 5000,
      "name": "mysql_status"
    },
    {
      "type": "command",
      "command": "netstat",
      "args": ["-tuln"],
      "timeout": 5000,
      "name": "network_connections"
    },
    {
      "type": "command",
      "command": "tail",
      "args": ["-n", "50", "/var/log/nginx/error.log"],
      "timeout": 5000,
      "name": "nginx_errors"
    },
    {
      "type": "command",
      "command": "php",
      "args": ["artisan", "queue:work", "--status"],
      "timeout": 5000,
      "working_directory": "/home/studiosdb/studiosunisdb/studiosdb",
      "name": "queue_status"
    }
  ]
}