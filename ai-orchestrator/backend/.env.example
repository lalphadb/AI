# AI Orchestrator v3.0 - Configuration
# Copiez ce fichier en .env et modifiez les valeurs

# === APPLICATION ===
AI_APP_NAME=AI Orchestrator
AI_APP_VERSION=3.0.0
AI_DEBUG=false

# === SERVEUR ===
AI_HOST=0.0.0.0
AI_PORT=8001

# === BASE DE DONNÉES ===
AI_DB_PATH=/data/orchestrator.db
AI_AUTH_DB_PATH=/data/auth.db

# === UPLOADS ===
AI_UPLOAD_DIR=/data/uploads
AI_MAX_UPLOAD_SIZE=52428800

# === OLLAMA ===
AI_OLLAMA_URL=http://10.10.10.46:11434
AI_DEFAULT_MODEL=qwen3-coder:480b-cloud
AI_LLM_TIMEOUT=180

# === CHROMADB ===
AI_CHROMADB_HOST=chromadb
AI_CHROMADB_PORT=8000

# === SÉCURITÉ - JWT ===
# IMPORTANT: Générez une clé unique avec: openssl rand -base64 32
AI_JWT_SECRET_KEY=CHANGEZ_MOI_EN_PRODUCTION_minimum_32_caracteres
AI_JWT_ALGORITHM=HS256
AI_JWT_EXPIRE_MINUTES=60
AI_REFRESH_TOKEN_EXPIRE_DAYS=7

# === SÉCURITÉ - AUTH ===
AI_AUTH_ENABLED=true
# IMPORTANT: Changez ce mot de passe!
AI_ADMIN_PASSWORD=changeme123

# === SÉCURITÉ - CORS ===
# Liste JSON des origines autorisées
AI_CORS_ORIGINS=["https://ai.4lb.ca","https://4lb.ca"]
AI_CORS_ALLOW_CREDENTIALS=true
AI_CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
AI_CORS_ALLOW_HEADERS=["*"]

# === SÉCURITÉ - RATE LIMITING ===
AI_RATE_LIMIT_ENABLED=true
AI_RATE_LIMIT_DEFAULT=60

# === REACT LOOP ===
AI_MAX_ITERATIONS=12

# === LOGGING ===
AI_LOG_LEVEL=INFO
AI_AUDIT_LOG_PATH=/data/audit.log
