{
  "allowed_commands": [
    "ls", "cat", "head", "tail", "grep", "find", "du", "df", "ps", "systemctl",
    "php", "composer", "npm", "node", "nodejs", "git", "pwd", "whoami", 
    "chmod", "chown", "mkdir", "touch", "cp", "mv", "rm", "yarn", "pnpm",
    "docker", "docker-compose", "mysql", "mysqldump", "mariadb", "redis-cli",
    "curl", "wget", "tar", "zip", "unzip", "free", "top", "htop", "netstat",
    "ss", "ip", "sed", "awk", "cut", "sort", "uniq", "wc", "echo", "test",
    "date", "which", "env", "export", "supervisorctl", "pm2", "nginx",
    "apache2", "service", "journalctl", "uname", "lsb_release", "id",
    "rsync", "scp", "ssh", "gpg", "apt", "apt-get", "dpkg", "snap",
    "brew", "make", "gcc", "g++", "python", "python3", "pip", "pip3",
    "ruby", "gem", "bundle", "rails", "artisan", "laravel", "vite",
    "webpack", "babel", "eslint", "prettier", "jest", "mocha", "cypress"
  ],
  "allowed_paths": [
    "/home/studiosdb",
    "/var/log",
    "/etc/nginx",
    "/tmp",
    "/home",
    "/var/www",
    "/opt",
    "/usr/local",
    "/etc",
    "/var/run"
  ],
  "max_timeout_ms": 120000,
  "max_output_bytes": 10000000,
  "log_dir": "/home/studiosdb/.local/share/mcp-local",
  "features": {
    "auto_fix": true,
    "task_scheduler": true,
    "workflow_engine": true,
    "smart_suggestions": true,
    "dependency_check": true,
    "parallel_execution": true,
    "error_recovery": true,
    "intelligent_retry": true,
    "caching": true,
    "monitoring": true,
    "auto_backup": true
  },
  "studiosdb_project": {
    "root": "/home/studiosdb/studiosunisdb",
    "database": "studiosdb",
    "framework": "laravel",
    "frontend": "vite",
    "auto_migrate": true,
    "auto_test": true,
    "auto_optimize": true
  },
  "monitoring": {
    "disk_threshold": 85,
    "memory_threshold": 90,
    "cpu_threshold": 80,
    "check_interval": 300000,
    "auto_cleanup": true,
    "alerts": true
  },
  "backup": {
    "auto_backup": true,
    "backup_dir": "/home/studiosdb/backups",
    "retention_days": 30,
    "database_backup": true,
    "files_backup": true,
    "schedule": "daily"
  }
}